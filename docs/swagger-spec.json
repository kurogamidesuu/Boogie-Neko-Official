  "info": {
    "title": "Boogie Neko API",
    "description": "The official API for the Boogie Neko store",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@boogieneko.com",
            "description": "The email of the user"
          },
          "password": {
            "type": "string",
            "example": "StrongPassword123",
            "minLength": 6
          },
          "firstName": {
            "type": "string",
            "example": "Teru"
          },
          "lastName": {
            "type": "string",
            "example": "Neko"
          },
          "role": {
            "type": "string",
            "enum": [
              "USER",
              "ADMIN"
            ],
            "default": "USER"
          }
        },
        "required": [
          "email",
          "password",
          "firstName",
          "lastName"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@boogieneko.com",
            "description": "The email of the user"
          },
          "password": {
            "type": "string",
            "example": "StrongPassword123",
            "minLength": 6
          },
          "firstName": {
            "type": "string",
            "example": "Teru"
          },
          "lastName": {
            "type": "string",
            "example": "Neko"
          },
          "role": {
            "type": "string",
            "enum": [
              "USER",
              "ADMIN"
            ],
            "default": "USER"
          }
        }
      },
      "CreateProductDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Pearl Necklace"
          },
          "description": {
            "type": "string",
            "example": "A beautiful handmade pearl necklace."
          },
          "price": {
            "type": "number",
            "example": "49.50"
          },
          "stock": {
            "type": "number",
            "example": "10",
            "minimum": 0
          },
          "categoryId": {
            "type": "number",
            "example": 2
          }
        },
        "required": [
          "title",
          "description",
          "price",
          "stock",
          "categoryId"
        ]
      },
      "UpdateProductDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Pearl Necklace"
          },
          "description": {
            "type": "string",
            "example": "A beautiful handmade pearl necklace."
          },
          "price": {
            "type": "number",
            "example": "49.50"
          },
          "stock": {
            "type": "number",
            "example": "10",
            "minimum": 0
          },
          "categoryId": {
            "type": "number",
            "example": 2
          }
        }
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@boogieneko.com",
            "description": "The email of the user"
          },
          "password": {
            "type": "string",
            "example": "StrongPassword123",
            "minLength": 6
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AddToCartDto": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "number",
            "example": 3
          },
          "quantity": {
            "type": "number",
            "example": 3,
            "minimum": 1
          }
        },
        "required": [
          "productId",
          "quantity"
        ]
      },
      "RemoveFromCartDto": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "number",
            "example": 3
          },
          "quantity": {
            "type": "number",
            "example": 3,
            "minimum": 1
          }
        },
        "required": [
          "productId",
          "quantity"
        ]
      },
      "CreateOrderDto": {
        "type": "object",
        "properties": {
          "shippingAddressId": {
            "type": "number",
            "description": "The Id of address where the products are shipped to"
          }
        },
        "required": [
          "shippingAddressId"
        ]
      },
      "CreatePaymentDto": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "number",
            "description": "The id of order that this payment belongs to"
          },
          "transactionId": {
            "type": "string",
            "description": "Transaction ID of the payment for the order",
            "example": "112233445566"
          }
        },
        "required": [
          "orderId",
          "transactionId"
        ]
      },
      "AddressType": {
        "type": "string",
        "enum": [
          "HOME",
          "WORK",
          "OTHER"
        ],
        "description": "The type of address i.e Home, Work or Other"
      },
      "CreateAddressDto": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "Kairi Kumar",
            "description": "The full name of user",
            "minLength": 2
          },
          "phone": {
            "type": "string",
            "description": "The 10-digit phone number of customer (without +91)",
            "example": "9876543210",
            "pattern": "^[6-9]\\d{9}$"
          },
          "pincode": {
            "type": "string",
            "description": "6-digit Indian Pincode",
            "example": "110001",
            "pattern": "^[1-9][0-9]{5}$"
          },
          "city": {
            "type": "string",
            "example": "New Delhi"
          },
          "state": {
            "type": "string",
            "example": "Delhi"
          },
          "houseNumber": {
            "type": "string",
            "description": "Flat, House no., Building, Apartment",
            "example": "Flat 402, Sunshine Heights"
          },
          "area": {
            "type": "string",
            "description": "Area, Street, Sector, Village",
            "example": "Sector 18, MG Road"
          },
          "landmark": {
            "type": "string",
            "description": "Nearby landmark to help delivery",
            "example": "Near HDFC Bank ATM"
          },
          "type": {
            "description": "The type of address i.e Home, Work or Other",
            "example": "HOME",
            "allOf": [
              {
                "$ref": "#/components/schemas/AddressType"
              }
            ]
          },
          "isDefault": {
            "type": "boolean",
            "description": "Set this as the default address for checkout",
            "default": false
          }
        },
        "required": [
          "fullName",
          "phone",
          "pincode",
          "city",
          "state",
          "houseNumber",
          "area"
        ]
      }
    }
  }
